@model CheckInGWDN.Models.Student
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<h3 class="text-dark mb-4">Student management</h3>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">
            Student Information
        </p>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="backgroundWhite shadowNew">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label class="col-form-label"></label>
                    </div>
                    <div class="col-md-5" style=" background-position:center; background-size:cover; border-radius: 50%;">
                        @if (Model.Avatar != null)
                        {
                            <img src="@Model.Avatar" style=" display: inline; margin: 0 auto; height: 300px; width: 300px" class="img-fluid img-thumbnail rounded-circle" />
                        }
                        else
                        {
                            <img src="/Avatar/default_avatar.png" style=" display: inline; margin: 0 auto; height: 300px; width: 300px" class="img-fluid img-thumbnail rounded-circle" />
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Name" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="StudentId" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="StudentId" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-5 offset-md-2">
                        <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>