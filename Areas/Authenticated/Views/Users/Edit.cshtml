@model ApplicationUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="container-fluid">
    <h3 class="text-dark mb-4">User management</h3>
    <div class="card shadow">
        <partial name="_StatusMessage" model="@ViewData["Message"]" />
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">
                Edit User
            </p>
        </div>
        <div class="card-body">
            <div class="backgroundWhite row shadowNew">
                <div class="col-8 border-right">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="@Model.FullName" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="@Model.FullName" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="@Model.Email" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="@Model.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
                            </div>
                            <div class="col-5">
                                <input asp-for="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-5 offset-3">
                                <div class="row">
                                    <div class="col-6">
                                        <input type="submit" class="btn btn-info form-control" value="Update" />
                                    </div>
                                    <div class="col-6">
                                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>