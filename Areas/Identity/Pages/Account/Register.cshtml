@page
@model RegisterModel
@using CheckInGWDN.Utility

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<h3 class="text-dark mb-4">User management</h3>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 font-weight-bold">
            Create a New Account
        </p>
    </div>
    <div class="card-body">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="backgroundWhite shadowNew">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Input.FullName" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Input.FullName" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Input.Email" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Input.Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Input.Password" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
                    </div>
                    <div class="col-md-5">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <label class="col-form-label">Role</label>
                    </div>
                    <div class="col-md-5">
                        @if (User.IsInRole(SD.Administrator))
                        {
                            <input type="radio" name="rdUserRole" value="@SD.Administrator" /> @SD.Administrator
                            <input type="radio" name="rdUserRole" value="@SD.Manager" /> @SD.Manager
                            <input type="radio" name="rdUserRole" value="@SD.Staff" /> @SD.Staff
                        }
                        else
                        {
                            <input type="radio" name="rdUserRole" value="@SD.Manager" /> @SD.Manager
                            <input type="radio" name="rdUserRole" value="@SD.Staff" /> @SD.Staff
                        }
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-5 offset-md-2">
                        <button type="submit" class="btn btn-primary form-control">Create Account</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}